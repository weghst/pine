<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd"
       default-lazy-init="false">

    <context:component-scan base-package="com.weghst.pine"/>

    <bean id="dataSource" class="com.jolbox.bonecp.BoneCPDataSource" destroy-method="close">
        <property name="driverClass" value="#{systemProperties['jdbc.driverClass']}"/>
        <property name="jdbcUrl" value="#{systemProperties['jdbc.url']}"/>
        <property name="username" value="#{systemProperties['jdbc.username']}"/>
        <property name="password" value="#{systemProperties['jdbc.password']}"/>
        <property name="idleConnectionTestPeriodInSeconds"
                  value="#{systemProperties['bonecp.idleConnectionTestPeriodInSeconds']}"/>
        <property name="idleMaxAgeInSeconds" value="#{systemProperties['bonecp.idleMaxAgeInSeconds']}"/>
        <property name="minConnectionsPerPartition" value="#{systemProperties['bonecp.minConnectionsPerPartition']}"/>
        <property name="maxConnectionsPerPartition" value="#{systemProperties['bonecp.maxConnectionsPerPartition']}"/>
        <property name="partitionCount" value="#{systemProperties['bonecp.partitionCount']}"/>
        <property name="acquireIncrement" value="#{systemProperties['bonecp.acquireIncrement']}"/>
        <property name="statementsCacheSize" value="#{systemProperties['bonecp.statementsCacheSize']}"/>
        <property name="defaultAutoCommit" value="#{systemProperties['bonecp.defaultAutoCommit']}"/>
    </bean>

    <!--
        事务配置, 事务方法命名规范
            insert -> save*
            update -> update*
            delete -> delete*
            select -> get*/load*/find*
    -->
    <bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="dataSource"/>
    </bean>

    <tx:annotation-driven transaction-manager="transactionManager"/>

    <!--
        MyBatis 配置
    -->
    <bean id="sqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="dataSource"/>
        <property name="configurationProperties">
            <props>
                <prop key="defaultScriptingLanguage">org.mybatis.scripting.freemarker.FreeMarkerLanguageDriver</prop>
            </props>
        </property>
        <property name="mapperLocations" value="classpath*:com/weghst/pine/domain/*Mapper.xml"/>
    </bean>

    <!-- Liquibase config -->
    <bean id="liquibase" class="liquibase.integration.spring.SpringLiquibase">
        <property name="dataSource" ref="dataSource"/>
        <!-- 开发阶段无需每次检查 -->
        <property name="shouldRun" value="false"/>
        <property name="changeLog" value="classpath:db/changelog-master.xml"/>
        <property name="rollbackFile"
                  value="${java.io.tmpdir}/db.rollback.#{T(java.lang.System).currentTimeMillis() / 1000}.sql"/>
    </bean>

    <!-- Pine configuration -->
    <bean id="configurationService" class="com.weghst.pine.service.impl.ConfigurationServiceImpl"/>

    <bean id="pine.grpcServer" class="com.weghst.pine.GrpcServer">
        <property name="port" value="#{systemProperties['pine.grpc.port']}"/>
    </bean>

    <import resource="classpath*:/spring-pine-core.xml"/>

    <bean id="jedis" class="redis.clients.jedis.Jedis">
        <constructor-arg type="java.lang.String" value="localhost"/>
        <constructor-arg type="int" value="6379"/>
    </bean>

    <bean id="mailSender" class="com.weghst.pine.service.JavaMailSenderFactoryBean">
        <property name="host" value="smtp.mxhichina.com"/>
        <property name="port" value="25"/>
        <property name="username" value="noreplay@weghst.com"/>
        <property name="password" value="njSzbjie0+"/>
    </bean>


    <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- +++++++++++++++                   Web Config                    +++++++++++++++ -->
    <!-- +++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++ -->
    <!-- Import basic SpringMVC Resteasy integration -->
    <import resource="classpath:springmvc-resteasy.xml"/>

    <bean id="resteasy.handlerMapping" parent="abstract.resteasy.handlerMapping">
        <property name="prefix" value="#{systemProperties['pine.restful.path.prefix']}"/>
    </bean>

    <!-- View Jackson ObjectMapper -->
    <bean id="viewObjectMapper" class="com.weghst.pine.web.ViewObjectMapperFactory" factory-method="getObjectMapper"/>

    <!-- Resteasy Jackson ObjectMapper config -->
    <bean class="com.weghst.pine.web.ObjectMapperContextResolver"/>

</beans>
